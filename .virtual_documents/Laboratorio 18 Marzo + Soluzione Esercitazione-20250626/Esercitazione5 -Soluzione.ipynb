import numpy as np
def valuta_horner(a,x):
    n=a.shape[0]

    p=a[n-1]*np.ones_like(x)
    for i in range(2,n+1):
         p=p*x+a[n-i] 
    return p




def valuta_alg1(a,x):
    n=a.shape[0]
    p=a[0]*np.ones_like(x)
    r=1
    for i in range(1,n):
        r=r*x
        p=p+a[i]*r
    return p




