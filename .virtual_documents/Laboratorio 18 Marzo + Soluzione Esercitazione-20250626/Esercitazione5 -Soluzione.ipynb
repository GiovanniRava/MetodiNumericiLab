def esp_taylor(x,N):
   
    r=x
    fattoriale=1
    esponential=1+r;
    for i in range(2,N+1):
        r=r*x
        fattoriale=fattoriale*i;
        esponential=esponential+r/fattoriale;
    return esponential


 
def esp_taylor_stabile(x,N):
    
    if x<0:
        x=abs(x)
        r=x
        fattoriale=1
        esponential=1+r;
        for i in range(2,N+1):
            r=r*x
            fattoriale=fattoriale*i;
            esponential=esponential+r/fattoriale;
    
        return 1/esponential
    
    else: 

        r=x
        fattoriale=1
        esponential=1+r;
        for i in range(2,N+1):
            r=r*x
            fattoriale=fattoriale*i;
            esponential=esponential+r/fattoriale;
        return esponential


