 A=np.array([[4,-1,6],[2,3,-3],[1,-2,9/2]]) 



def mynorma2(A):
    M=A.T@A
    autovalori=np.linalg.eigvals(M)
    n2=np.sqrt(np.max(np.abs(autovalori)))
    return n2


A=np.array([[4,-1,6],[2,3,-3],[1,-2,9/2]])
norma2=mynorma2(A)
print("mynorma 2",norma2)
print("norma 2 con numpy.linalg.norm ", np.linalg.norm(A,2))






