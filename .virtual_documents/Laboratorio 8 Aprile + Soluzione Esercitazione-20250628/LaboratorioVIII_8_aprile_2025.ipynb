def solve_nsis(A,B):
    #test dimensione
    m,n = A.shape
    flag = 0;
    if n!=m:
        print("Matrice non quadrata")
        return 

    X = np.zeros((n,n))
    PT, L, U =lu(A)
    P=PT.T.copy()
    if flag == 0:
        for i in range (n):
            y,flag = Lsolve(L, P@B[:,i])
            x,flag = Usolve(U,y)
            X[:,i]=x.reshape(n,)

    else: 
        print("elemento diagonale nullo")
        X =[]

    return X





